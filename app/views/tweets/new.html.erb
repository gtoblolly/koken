<h1>管理画面</h1>
<%# <%= link_to "ログイン", new_user_session_path http://localhost:3000/users/sign_in%>
<%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
<%= form_with(model: @tweet, local: true) do |form| %>
  <%= form.text_field :title, placeholder: "タイトル" %>
  <%= form.file_field :image, placeholder: "画像" %>
  <%= form.text_area :comment, placeholder: "コメント" %>
  <%= form.submit "投稿" %>
<% end %>

<h2>投稿記事一覧<h2>
<% @tweets.each do |tweet| %>
  <%= link_to tweet_path(tweet.id), method: :get do %>
  <div class="media_image">  
    <%= image_tag tweet.image.variant(resize: '200x200') if tweet.image.attached? %>
  </div>
  <div class="media_title">
    <%= tweet.title %>
  </div>
  <% end %>
  <%= link_to '削除', tweet_path(tweet.id), method: :delete %>
  <%= link_to '編集', edit_tweet_path(tweet.id), method: :get %>
<% end %>