<div class="contact">
  <h1>お問い合わせフォーム</h1>
  <div class="contacts">
    <%= form_with(model: @contact, local: true) do |f| %>
    
    <div class="form-group">
      <div class="form-name">
        <%= f.label :name, 'お名前' %><span class="ararm">必須</span>
      </div>
      <div class="form-content">
        <%= f.text_field :name, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <div class="form-name">
        <%= f.label :phone_number, '電話番号' %><span class="ararm">必須</span>
      </div>
      <div class="form-content">
        <%= f.text_field :phone_number, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <div class="form-name">
        <%= f.label :email, 'メールアドレス' %><span class="ararm">必須</span>
      </div>
      <div class="form-content">
        <%= f.text_field :email, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <div class="form-name">
        <%= f.label :area, '施工予定現場' %><span class="ararm">必須</span>
      </div>
      <div class="form-content">
        <%= f.select :area, [["東京都", "東京都"], ["神奈川県", "神奈川県"], ["埼玉県", "埼玉県"], ["千葉県", "千葉県"], ["その他","その他"]], include_blank: "選択してください" %>
      </div>
    </div>

    <div class="form-group">
      <div class="form-name">
        <%= f.label :contents, '工事内容' %><span class="ararm">必須</span>
      </div>
      <div class="form-content">
        <%= f.select :contents, [["戸建て", "戸建て"], ["マンション", "マンション"], ["テナント工事", "テナント工事"], ["現状回復", "現状回復"], ["その他","その他"]], include_blank: "選択してください" %>
      </div>
    </div>

    <div class="form-group">
      <div class="form-name">
        <%= f.label :message, 'メッセージ' %><span class="ararm">必須</span>
      </div>
      <div class="form-content">
        <%= f.text_area :message, class: 'form-text' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.submit '送信', class: 'button' %>
    </div>

    <% end %>
  </div>
</div>